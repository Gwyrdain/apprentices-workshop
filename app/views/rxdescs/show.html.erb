<%- model_class = Rxdesc -%>

<div class="panel panel-default">
    <div class="panel-heading monospace"><h3>
        <%= link_to @area.name, area_path(@area) %> /
        <%= link_to "Room: #{@room.vnum}", area_room_path(@area, @room) %> /
        <strong><%= @rxdesc.keywords %></strong>
    </h3></div>
    <div class="panel-body monospace">
      
      <div class="row">
        <div class="col-md-2">
          <strong>Keywords:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @rxdesc.keywords %>
          </div>
        </div>
      </div><br/>      
      <div class="row">
        <div class="col-md-2">
          <strong>Description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= simple_format(word_wrap(@rxdesc.description, line_width: 75)) %>
          </div>
        </div>
      </div><br/>

      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    area_room_path(@area, @room), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_area_room_rxdesc_path(@area, @room, @rxdesc), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    area_room_rxdesc_path(@area, @room, @rxdesc),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>

    </div>
    
</div>
