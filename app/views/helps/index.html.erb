<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> / <strong>Helps</strong>
    </h3></div>
    <div class="panel-body">

      <table class="table table-hover monospace">
        <thead>
          <tr>
            <th></th>
            <th>Min_level</th>
            <th>Keywords</th>
            <th>Body</th>
          </tr>
        </thead>
      
        <tbody>
          <% @helps.each do |help| %>
            <tr>
              <td>
                <%= link_to(area_help_path(@area, help)) do %><span class="glyphicon glyphicon-list-alt" aria-hidden="true"><% end %>
                <%= link_to(edit_area_help_path(@area, help)) do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"><% end %>
                <%= link_to([@area, help], method: :delete, data: { confirm: 'Are you sure?' } ) do %><span class="glyphicon glyphicon-remove" aria-hidden="true"><% end %>
              </td>
              <td><%= help.min_level %></td>
              <td><%= help.keywords %></td>
              <td><%= simple_format(word_wrap(help.body, line_width: 75)) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

    <div class="panel-footer">
      <%= link_to 'New Help', new_area_help_path %> | 
      <%= link_to 'Back', area_path(@area) %>
    </div>
    
</div>

<br/>
<strong>Formatted #HELP Block:</strong>
<pre>
#HELP
<% @helps.each do |help| %>
<%= help.min_level %> <%= help.keywords %>~
<%= word_wrap(help.body, line_width: 75) %> ~
<% end %>
0 $~
</pre>
<br/>