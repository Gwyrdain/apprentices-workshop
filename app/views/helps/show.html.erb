<%- model_class = Help -%>

<div class="panel panel-default">
    <div class="panel-heading monospace"><h3>
        <%= link_to @area.name, area_path(@area) %> / <%= link_to 'Helps', area_helps_path(@area) %> / <%= @help.keywords %>
    </h3></div>
    <div class="panel-body monospace">

      <p id="notice"><%= notice %></p>

      <p>
        <strong>Minimum Level:</strong>
        <%= @help.min_level %>
      </p>
      
      <p>
        <strong>Keywords:</strong>
        <%= @help.keywords %>
      </p>
      
      <p>
        <strong>Body:</strong>
        <%= simple_format(word_wrap(@help.body, line_width: 75)) %>
      </p>
      
    </div>
    
    <div class="panel-footer">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  area_helps_path(@area), :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_area_help_path(@area, @help), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  area_help_path(@area, @help),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
    
</div>

<br>
<strong class="monospace">Formatted Help:</strong>
<pre><%= render 'helps/helpblock', :help => @help %></pre>