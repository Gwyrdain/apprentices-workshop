<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="panel panel-default monospace">
  <div class="panel-heading"><h3>Sign up</h3></div>
  <div class="panel-body form-horizontal">
    
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.label :email, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :time_zone, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.time_zone_select :time_zone, nil, {:default => 'Arizona'}, {:class => 'form-control'} %>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label :password, :class => 'control-label col-md-2' %>
        <% if @validatable %>
        <% end %>
        <div class="col-md-10">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

  </div>
  <div class="panel-footer">
    <%= f.submit 'Sign up', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
  </div>
</div>
<% end %>
