<%= form_for [@apply.obj.area, @apply.obj, @apply], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @apply.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@apply.errors.count, "error") %> prohibited saving:</h3>

      <ul>
      <% @apply.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :apply_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:apply_type, options_for_select(
          [
            ['STR', 1],
            ['DEX', 2],
            ['INT', 3],
            ['WIS', 4],
            ['CON', 5],
            ['MANA', 12],
            ['HIT', 13],
            ['MOVE', 14],
            ['AC', 17],
            ['HITROLL', 18],
            ['DAMROLL', 19],
            ['SAVE V SPELL', 24],
            ['CHARISMA', 25],
            ['LUCK', 26],
            ['NOSTEAL', 27],
            ['NOSLEEP', 28],
            ['NOSUMMON', 29],
            ['NOCHARM', 30],
            ['NOSEXCHANGE', 31],
            ['TRUESEE', 32],
            ['NOINFO', 33],
            ['WATERBREATH', 34],
            ['DAMAGE ABSORPTION', 41],
            ['MAGICAL RESISTANCE', 43]
          ], @apply.apply_type
        ), {}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
       <%= f.text_field :amount, class: 'form-control', rows: 10 %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  area_obj_path(@area, @obj), :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
