<%- model_class = Room -%>

<div class="panel panel-default">
    <div class="panel-heading monospace"><h3>
        <%= link_to @area.name, area_path(@area) %> / <%= link_to 'Rooms', area_rooms_path(@area) %> / <strong><%= @room.vnum %></strong>
    </h3></div>
    <div class="panel-body monospace">

      <p id="notice"><%= notice %></p>
      
      <p>
        <strong><%= model_class.human_attribute_name(:name) %>:</strong>
        <%= @room.name %>
      </p>
      
      <p>
        <strong><%= model_class.human_attribute_name(:description) %>:</strong>
        <%= simple_format(word_wrap(@room.description, line_width: 75)) %>
      </p>
      
      <p>
        <strong><%= model_class.human_attribute_name(:room_flags) %> value:</strong>
        <%= @room.room_flags %>
      </p>
      
      <p>
        <strong><%= model_class.human_attribute_name(:room_flags) %>:</strong>
        <% if @room.dark? %><ol>DARK</ol><% end %>
        <% if @room.no_sleep? %><ol>NO SLEEP</ol><% end %>
        <% if @room.no_mob? %><ol>NO MOB</ol><% end %>
        <% if @room.indoors? %><ol>INDOORS</ol><% end %>
        <% if @room.foggy? %><ol>FOGGY</ol><% end %>
        <% if @room.private_room? %><ol>PRIVATE</ol><% end %>
        <% if @room.peaceful? %><ol>PEACEFUL</ol><% end %>
        <% if @room.solitary? %><ol>SOLITARY</ol><% end %>
        <% if @room.no_recall? %><ol>NO RECALL</ol><% end %>
        <% if @room.no_steal? %><ol>NO STEAL</ol><% end %>
        <% if @room.notrans? %><ol>NOTRANS</ol><% end %>
        <% if @room.no_spell? %><ol>NO SPELL</ol><% end %>
        <% if @room.no_fly? %><ol>NO FLY</ol><% end %>
        <% if @room.fly_ok? %><ol>FLY OK</ol><% end %>
        <% if @room.no_quest? %><ol>NO QUEST</ol><% end %>
        <% if @room.no_item? %><ol>NO ITEM</ol><% end %>
        <% if @room.no_vnum? %><ol>NO VNUM</ol><% end %>

      </p>
      
      <p>
        <strong><%= model_class.human_attribute_name(:terrain) %>:</strong>
        <%= @room.terrain %>
      </p>

    <strong>Formatted room:</strong>
    <p>
        <pre><%= render 'rooms/roomblock', :room => @room %></pre>
    </p>

    </div>

    <div class="panel-footer form-group">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  area_rooms_path(@area), :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_area_room_path(@area, @room), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  area_room_path(@area, @room),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
    
</div>
