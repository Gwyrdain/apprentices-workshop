<div class="panel panel-info">
    <div class="panel-heading"><h3>
        Mobile Special Function
    </h3></div>

    <table class="table table-hover monospace">
      <thead>
        <tr>
          <th>Type</th>
          <th>Name</th>
          <th>Ext. Val 1</th>
          <th>Ext. Val 2</th>
          <th>Ext. Val 3</th>
          <th>Ext. Val 4</th>
          <th>Ext. Val 5</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <% if @mobile.specials.count == 0 %>
        <tfoot><tr><td colspan = '100%'>
          <%= link_to 'New Special', new_area_mobile_special_path(@area, @mobile), :class => 'btn btn-primary' %>
        </td></tr></tfoot>
      <% end %>
      <tbody>
        <% @mobile.specials.each do |special| %>
          <tr>
            <td>
              <%= special.special_type %>
            </td>
            <td>
              <%= special.name %>
            </td>
            <td>
              <%= special.extended_value_1 %>
            </td>
            <td>
              <%= special.extended_value_2 %>
            </td>
            <td>
              <%= special.extended_value_3 %>
            </td>
            <td>
              <%= special.extended_value_4 %>
            </td>
            <td>
              <%= special.extended_value_5 %>
            </td>
            <td>
              <%= link_to area_mobile_special_path(@area, @mobile, special), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                <%= glyph 'info-sign' %>
              <%- end -%>
              <%= link_to edit_area_mobile_special_path(@area, @mobile, special), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                <%= glyph 'pencil' %>
              <%- end -%>
              <%= link_to area_mobile_special_path(@area, @mobile, special), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                <%= glyph 'remove' %>
              <%- end -%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
