<%- model_class = Mobile -%>
<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> / Mobiles
    </h3></div>
    <div class="panel-body">

      <table class="table table-hover monospace">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:vnum) %></th>
            <th><%= model_class.human_attribute_name(:keywords) %></th>
            <th><%= model_class.human_attribute_name(:sdesc) %></th>
            <th><%= model_class.human_attribute_name(:ldesc) %></th>
            <th><%= model_class.human_attribute_name(:look_desc) %></th>
            <th><%= model_class.human_attribute_name(:act_flags) %></th>
            <th><%= model_class.human_attribute_name(:affect_flags) %></th>
            <th><%= model_class.human_attribute_name(:alignment) %></th>
            <th><%= model_class.human_attribute_name(:level) %></th>
            <th><%= model_class.human_attribute_name(:sex) %></th>
            <th><%= model_class.human_attribute_name(:langs_known) %></th>
            <th><%= model_class.human_attribute_name(:lang_spoken) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @mobiles.each do |mobile| %>
            <tr>
                <td><%= mobile.vnum %></td>
                <td><%= mobile.keywords %></td>
                <td><%= mobile.sdesc %></td>
                <td><%= mobile.ldesc %></td>
                <td><%= mobile.look_desc %></td>
                <td><%= mobile.act_flags %></td>
                <td><%= mobile.affect_flags %></td>
                <td><%= mobile.alignment %></td>
                <td><%= mobile.level %></td>
                <td><%= mobile.sex %></td>
                <td><%= mobile.langs_known %></td>
                <td><%= mobile.lang_spoken %></td>
              <td>
                <%= link_to area_mobile_path(@area, mobile), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                  <%= glyph 'info-sign' %>
                <%- end -%>
                <%= link_to edit_area_mobile_path(@area, mobile), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                  <%= glyph 'pencil' %>
                <%- end -%>
                <%= link_to area_mobile_path(@area, mobile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                  <%= glyph 'remove' %>
                <%- end -%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

    <div class="panel-footer">
      <%= link_to 'New mobile', new_area_mobile_path %> | 
      <%= link_to 'Back', area_path(@area) %>
    </div>
    
</div>

<br/>
<strong class="monospace">Formatted #MOBILES Block:</strong>
<pre><%= render 'mobiles/mobilesblock' %></pre>
<br/>