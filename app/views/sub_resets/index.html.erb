<%- model_class = SubReset -%>
<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> / 
      Reset: <%= @reset.comment %> /
      Sub-resets
    </h3></div>
    <div class="panel-body">

      <table class="table table-hover monospace">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:reset_type) %></th>
            <th>Description</th>
            <th>Value 1</th>
            <th>Value 2</th>
            <th>Value 3</th>
            <th>Value 4</th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @sub_resets.each do |sub_reset| %>
            <tr>
              <td><%= sub_reset.desc_brief %></td>
              <td><%= sub_reset.comment %></td>
              <td><%= sub_reset.val_1 %></td>
              <td><%= sub_reset.val_2 %></td>
              <td><%= sub_reset.val_3 %></td>
              <td><%= sub_reset.val_4 %></td>
              <td>
                <%= link_to area_reset_sub_reset_path(@area, sub_reset.reset, sub_reset), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                  <%= glyph 'info-sign' %>
                <%- end -%>
                <%= link_to edit_area_reset_sub_reset_path(@area, sub_reset.reset, sub_reset), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                  <%= glyph 'pencil' %>
                <%- end -%>
                <%= link_to area_reset_sub_reset_path(@area, sub_reset.reset, sub_reset), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                  <%= glyph 'remove' %>
                <%- end -%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

    <div class="panel-footer">
      <%= link_to 'Back', area_resets_path(@area) %>
    </div>
    
</div>