<%- model_class = Exit -%>

<div class="panel panel-default">
    <div class="panel-heading monospace"><h3>
        <%= link_to @area.name, area_path(@area) %> /
        <%= link_to "Room: #{@room.vnum}", area_room_path(@area, @room) %> /
        <%= @exit.direction_word %>
    </h3></div>
    <div class="panel-body monospace">
      
      <div class="row">
        <div class="col-md-2">
          <strong>Direction:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.direction %> / <%= @exit.direction_word %>
          </div>
        </div>
      </div><br/> 
      
      <div class="row">
        <div class="col-md-2">
          <strong>Description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.description %>
          </div>
        </div>
      </div><br/> 
      
      <div class="row">
        <div class="col-md-2">
          <strong>Keywords:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.keywords %>
          </div>
        </div>
      </div><br/> 

      <div class="row">
        <div class="col-md-2">
          <strong>Exit Type:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.exittype %>
          </div>
        </div>
      </div><br/> 

      <div class="row">
        <div class="col-md-2">
          <strong>Key Vnum:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.keyvnum %>
          </div>
        </div>
      </div><br/> 

      <div class="row">
        <div class="col-md-2">
          <strong>Destination:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <% if @exit.destination_exists? %>
              <%= @exit.destination.vnum %>
            <% else %>
              *** BAD EXIT: NO DESTINATION ***
            <% end %>
          </div>
        </div>
      </div><br/>

      
      <div class="row">
        <div class="col-md-2">
          <strong>Exit Name:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @exit.name %>
          </div>
        </div>
      </div><br/> 

      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    area_room_path(@area, @room), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_area_room_exit_path(@area, @room, @exit), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    area_room_exit_path(@area, @room, @exit),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>

    </div>
    
</div>
