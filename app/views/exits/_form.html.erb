<%= form_for [@exit.room.area, @exit.room, @exit], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :direction, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :direction, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :keywords, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :keywords, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exittype, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :exittype, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :keyvnum, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :keyvnum, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exitto, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :exitto, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :room_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :room_id, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  area_room_exits_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
