<%- model_class = Shop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:buy_type_1) %></th>
      <th><%= model_class.human_attribute_name(:buy_type_2) %></th>
      <th><%= model_class.human_attribute_name(:buy_type_3) %></th>
      <th><%= model_class.human_attribute_name(:buy_type_4) %></th>
      <th><%= model_class.human_attribute_name(:buy_type_5) %></th>
      <th><%= model_class.human_attribute_name(:open_hour) %></th>
      <th><%= model_class.human_attribute_name(:close_hour) %></th>
      <th><%= model_class.human_attribute_name(:race) %></th>
      <th><%= model_class.human_attribute_name(:mobile_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.id %></td>
          <td><%= shop.buy_type_1 %></td>
          <td><%= shop.buy_type_2 %></td>
          <td><%= shop.buy_type_3 %></td>
          <td><%= shop.buy_type_4 %></td>
          <td><%= shop.buy_type_5 %></td>
          <td><%= shop.open_hour %></td>
          <td><%= shop.close_hour %></td>
          <td><%= shop.race %></td>
          <td><%= shop.mobile_id %></td>
        <td><%=l shop.created_at, format: :long %></td>
        <td>
          <%= link_to area_mobile_shop_path(@area, @mobile, shop), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_area_mobile_shop_path(@area, @mobile, shop), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to area_mobile_shop_path(@area, @mobile, shop), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shop_path,
            :class => 'btn btn-primary' %>
