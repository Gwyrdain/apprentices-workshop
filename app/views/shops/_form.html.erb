<%= form_for [@shop.mobile.area, @shop.mobile, @shop], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@shop.errors.count, "error") %> prohibited saving:</h3>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :buy_type_1, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :buy_type_1, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buy_type_2, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :buy_type_2, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buy_type_3, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :buy_type_3, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buy_type_4, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :buy_type_4, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buy_type_5, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :buy_type_5, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :open_hour, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :open_hour, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :close_hour, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :close_hour, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :race, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :race, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  area_mobile_path(@area, @mobile), :class => 'btn btn-default' %>
    </div>

<% end %>
