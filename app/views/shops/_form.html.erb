<%= form_for [@shop.mobile.area, @shop.mobile, @shop], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@shop.errors.count, "error") %> prohibited saving:</h3>

      <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :buy_type_1, 'Shop buys', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:buy_type_1, options_for_select(item_types, @shop.buy_type_1
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :buy_type_2, 'Shop buys', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:buy_type_2, options_for_select(item_types, @shop.buy_type_2
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :buy_type_3, 'Shop buys', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:buy_type_3, options_for_select(item_types, @shop.buy_type_3
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :buy_type_4, 'Shop buys', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:buy_type_4, options_for_select(item_types, @shop.buy_type_4
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :buy_type_5, 'Shop buys', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:buy_type_5, options_for_select(item_types, @shop.buy_type_5
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :open_hour, 'Shop opening hour', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:open_hour, options_for_select(hours_list, @shop.open_hour
          ), {}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :close_hour, 'Shop closing hour', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:close_hour, options_for_select(hours_list, @shop.close_hour
          ), {}, {class: "form-control"}) %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :race, 'Race (for pricing bias)', :class => 'control-label col-md-3' %>
    <div class="col-md-9">
      <%= f.select(:race, options_for_select(race_list, @shop.race
          ), {}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-3 col-md-9'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  area_mobile_path(@area, @mobile), :class => 'btn btn-default' %>
    </div>

<% end %>
