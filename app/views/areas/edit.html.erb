<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
        <%= @area.name %>
    </h3></div>
    <div class="panel-body">

        <% if params[:ownership] %>
            <%= render :partial => 'ownership' %>
        <% else %>
            <%= render :partial => 'form' %>
        <% end %>
    
    </div>
    
    <div class="panel-footer">
        <%= link_to 'Show', @area %> |
        <%= link_to 'Back', areas_path %>
    </div>
    
</div>
