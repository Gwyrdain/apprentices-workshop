<%- model_class = Area -%>
<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
     My Areas
    </h3></div>
    <div class="panel-body">
      <%= render 'areas/areatable', :some_areas => @areas.order(:area_number).where(:user => current_user.id) %>
    </div>
    
    <div class="panel-footer">
      <%= link_to 'New Area', new_area_path, :class => 'btn btn-primary'  %>
      <% if current_user.is_admin? %>
        <%= link_to 'Import Area', new_area_path(:import => true), :class => 'btn btn-warning'  %>
      <% end %>
    </div>
</div>


<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
     Other Areas (Shared With Me)
    </h3></div>
    <div class="panel-body">
      <%= render 'areas/areatable', :some_areas => @areas.order(:area_number).where.not(:user => current_user.id) %>
    </div>
</div>