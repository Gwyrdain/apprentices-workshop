  <%= form_for [@area], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@area.errors.count, "error") %> prohibited saving:</h3>

      <ul>
      <% @area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :file, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :file %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  areas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
