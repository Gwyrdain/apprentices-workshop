<%- model_class = Reset -%>
<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> / Resets
      <%= link_to new_area_reset_path(@area), :class => 'btn btn-xs', :title => "#{ t('.new', :default => t('helpers.links.show')) }" do %>
        <%= glyph 'plus' %>
      <%- end -%>
    </h3></div>
    <div class="panel-body">

      <table class="table table-hover monospace">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:reset_type) %></th>
            <th><%= model_class.human_attribute_name(:val_1) %></th>
            <th><%= model_class.human_attribute_name(:val_2) %></th>
            <th><%= model_class.human_attribute_name(:val_3) %></th>
            <th><%= model_class.human_attribute_name(:val_4) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @resets.each do |reset| %>
            <tr>
              <td><%= reset.reset_type %></td>
              <td><%= reset.val_1 %></td>
              <td><%= reset.val_2 %></td>
              <td><%= reset.val_3 %></td>
              <td><%= reset.val_4 %></td>
              <td>
                <%= link_to area_reset_path(@area, reset), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                  <%= glyph 'info-sign' %>
                <%- end -%>
                <%= link_to edit_area_reset_path(@area, reset), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                  <%= glyph 'pencil' %>
                <%- end -%>
                <%= link_to area_reset_path(@area, reset), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                  <%= glyph 'remove' %>
                <%- end -%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>

    <div class="panel-footer">
      <%= link_to 'New reset', new_area_reset_path(@area) %> | 
      <%= link_to 'Back', area_path(@area) %>
    </div>
    
</div>

<br/>
<strong class="monospace">Formatted #RESETS Block:</strong>
<pre><%= render 'resets/resetsblock' %></pre>
<br/>