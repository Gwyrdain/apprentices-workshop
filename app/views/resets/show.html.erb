<%- model_class = Reset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reset_type) %></dt>
      <dd><pre class="prettyprint"><%= @reset.reset_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:val_1) %></dt>
      <dd><pre class="prettyprint"><%= @reset.val_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:val_2) %></dt>
      <dd><pre class="prettyprint"><%= @reset.val_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:val_3) %></dt>
      <dd><pre class="prettyprint"><%= @reset.val_3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:val_4) %></dt>
      <dd><pre class="prettyprint"><%= @reset.val_4 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:area_id) %></dt>
      <dd><pre class="prettyprint"><%= @reset.area_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              area_resets_path(@area), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_area_reset_path(@area, @reset), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              area_reset_path(@area, @reset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>