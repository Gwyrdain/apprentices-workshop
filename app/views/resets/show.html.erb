<%- model_class = Reset -%>
<div class="panel panel-default monospace">
  <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> /
      <%= link_to 'Resets', area_resets_path(@area) %> /
      Reset: <%= @reset.description %>
  </h3></div>
  <div class="panel-body">
    
    <div class="row">
      <div class="col-md-2">
        <strong>Reset type:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @reset.desc_brief %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Frequency:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= 'Reset every cycle' if @reset.val_1 == 1 %>
          <%= 'Reset only if zone is empty' if @reset.val_1 == 0 %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Value 2:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @reset.val_2 %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Value 3:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @reset.val_3 %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Value 4:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @reset.val_4 %>
        </div>
      </div>
    </div><br/>
    
    <strong class="monospace">Formatted Reset:</strong>
    <p>
        <pre><%= render 'resets/resetblock', :reset => @reset %></pre>
    </p>


    </div>
      
    <div class="panel-footer">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  area_resets_path(@area), :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_area_reset_path(@area, @reset), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  area_reset_path(@area, @reset),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  
</div>