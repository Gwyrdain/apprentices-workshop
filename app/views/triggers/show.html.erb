<%- model_class = Trigger -%>
<div class="panel panel-default monospace">
  <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> /
      <%= link_to "Room: #{@room.vnum}", area_room_path(@area, @room) %> /
      <%= link_to "Exit: #{@exit.direction_word}", area_room_exit_path(@area, @room, @exit) %> /
      <%= @trigger.name %>
  </h3></div>
  <div class="panel-body">
    
    <div class="row">
      <div class="col-md-2">
        <strong>Type:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <% if @trigger.trigger_type == 'A' %>Trigger After Move (Allow Type)<% end %>
          <% if @trigger.trigger_type == 'P' %>Trigger Before Move (Prevent Type)<% end %>
          <% if @trigger.trigger_type == 'Q' %>Extended Trigger Before Move<% end %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Name:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @trigger.name %>
        </div>
      </div>
    </div><br/>
    
    <% if @trigger.trigger_type == 'Q' %>
    
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @trigger.extended_value_1 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @trigger.extended_value_2 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @trigger.extended_value_3 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @trigger.extended_value_4 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @trigger.extended_value_5 %>
          </div>
        </div>
      </div><br/>
    
    <% end %>
    
  </div>

  <div class="panel-footer">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                area_room_exit_triggers_path(@area, @room, @exit), :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_area_room_exit_trigger_path(@area, @room, @exit, @trigger), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                area_room_exit_trigger_path(@area, @room, @exit, @trigger),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
  
</div>