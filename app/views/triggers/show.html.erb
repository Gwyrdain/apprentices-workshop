<%- model_class = Trigger -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:trigger_type) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.trigger_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_1) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.extended_value_1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_2) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.extended_value_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_3) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.extended_value_3 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_4) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.extended_value_4 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_5) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.extended_value_5 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:exit_id) %></dt>
      <dd><pre class="prettyprint"><%= @trigger.exit_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              triggers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trigger_path(@trigger), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trigger_path(@trigger),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>