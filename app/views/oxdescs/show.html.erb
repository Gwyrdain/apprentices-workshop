<%- model_class = Oxdesc -%>

<div class="panel panel-default monospace">
    <div class="panel-heading"><h3>
        <%= link_to @area.name, area_path(@area) %> /
        <%= link_to "Obj: #{@obj.vnum}", area_obj_path(@area, @obj) %> /
        <%= @oxdesc.keywords %>
    </h3></div>
    <div class="panel-body">
      
      <div class="row">
        <div class="col-md-2">
          <strong>Keywords:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @oxdesc.keywords %>
          </div>
        </div>
      </div><br/>      
      <div class="row">
        <div class="col-md-2">
          <strong>Description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= simple_format(word_wrap(@oxdesc.description, line_width: 75)) %>
          </div>
        </div>
      </div><br/>

      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    area_obj_path(@area, @obj), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_area_obj_oxdesc_path(@area, @obj, @oxdesc), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    area_obj_oxdesc_path(@area, @obj, @oxdesc),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>

    </div>
    
</div>
