<%- model_class = Oxdesc -%>

<div class="panel panel-default monospace">
  <div class="panel-heading">
    <%= render 'areas/quick_links', :model_class => model_class %>
    <h5>
      <%= link_to 'Objects', area_objs_path(@area) %> / <%= link_to "Obj: #{@obj.vnum} #{@obj.sdesc}", area_obj_path(@area, @obj) %> / <%= @oxdesc.keywords %>
      <%= link_to edit_area_obj_path(@area, @obj), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
        <%= glyph 'pencil' %>
      <%- end -%>
      <%= link_to new_area_obj_path(@area), :class => 'btn btn-xs', :title => "#{ t('.new', :default => t('helpers.links.new')) }" do %>
        <%= glyph 'plus' %>
      <%- end -%>
      <div class="pull-right">
        <div class="btn-group " role="group" aria-label="...">
          <% if @obj.last_obj %><%= link_to "Last Object: #{@obj.last_obj.vnum}", area_obj_path(@area, @obj.last_obj), :class => 'btn btn-default  btn-xs' %><% end %>
          <% if @obj.next_obj %><%= link_to "Next Object: #{@obj.next_obj.vnum}", area_obj_path(@area, @obj.next_obj), :class => 'btn btn-default  btn-xs' %><% end %>
        </div>
      </div>
    </h5>
  </div>

    <div class="panel-body">
      
      <div class="row">
        <div class="col-md-2">
          <strong>Keywords:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @oxdesc.keywords %>
          </div>
        </div>
      </div><br/>      
      <div class="row">
        <div class="col-md-2">
          <strong>Description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= simple_format(word_wrap(@oxdesc.description, line_width: WORDWRAP_LENGTH)) %>
          </div>
        </div>
      </div><br/>

      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    area_obj_path(@area, @obj), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_area_obj_oxdesc_path(@area, @obj, @oxdesc), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    area_obj_oxdesc_path(@area, @obj, @oxdesc),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>

    </div>
    
</div>
