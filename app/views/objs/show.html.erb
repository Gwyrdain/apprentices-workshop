<%- model_class = Obj -%>

<div class="panel panel-default monospace">
  <div class="panel-heading">
    <h3>
      <%= link_to @area.name, area_path(@area) %> / <%= @obj.sdesc %>
      <%= link_to edit_area_obj_path(@area, @obj), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
        <%= glyph 'pencil' %>
      <%- end -%>
      <%= link_to new_area_obj_path(@area), :class => 'btn btn-xs', :title => "#{ t('.new', :default => t('helpers.links.new')) }" do %>
        <%= glyph 'plus' %>
      <%- end -%>
      <div class="pull-right">
        <%= render 'areas/quick_links' %>
        <div class="btn-group " role="group" aria-label="...">
          <% if @obj.last_obj %><%= link_to "Last Object: #{@obj.last_obj.vnum}", area_obj_path(@area, @obj.last_obj), :class => 'btn btn-default  btn-xs' %><% end %>
          <% if @obj.next_obj %><%= link_to "Next Object: #{@obj.next_obj.vnum}", area_obj_path(@area, @obj.next_obj), :class => 'btn btn-default  btn-xs' %><% end %>
        </div>
      </div>
    </h3>
  </div>
  <div class="panel-body">

      <div class="row">
        <div class="col-md-2">
          <strong>Formal Vnum:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.formal_vnum %>
          </div>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Keywords:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.keywords %>
          </div>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Short description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.sdesc %>
          </div>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Long description:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.ldesc %>
          </div>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Object type:</strong>
        </div>
        <div class="col-md-10">
          <div class='col-md-2'><%= object_type_from_num(@obj.object_type) %></div>
        </div>
      </div><br/>
      <!-- Not used
      <div class="row">
        <div class="col-md-2">
          <strong>Values:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-2">
            [V0]: <%= @obj.v0 %>
          </div>
          <div class="col-md-2">
            [V1]: <%= @obj.v1 %>
          </div>
          <div class="col-md-2">
            [V2]: <%= @obj.v2 %>
          </div>
          <div class="col-md-2">
            [V3]: <%= @obj.v3 %>
          </div>
        </div>
      </div><br/>
      -->
      
      <%= render 'objs/objvalues', :obj => @obj %>

      <div class="row">
        <div class="col-md-2">
          <strong>Takeable:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <% if @obj.takeable?%>YES<% else %>NO<% end %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Flags:</strong>
        </div>
        <div class="col-md-10">
          <% if @obj.extra_flags == 0 %><div class="col-md-2">NONE</div><% end %>
          <% if @obj.glow? %><div class='col-md-2'>GLOW</div><% end %>
          <% if @obj.hum? %><div class='col-md-2'>HUM</div><% end %>
          <% if @obj.evil? %><div class='col-md-2'>EVIL</div><% end %>
          <% if @obj.invis? %><div class='col-md-2'>INVIS</div><% end %>
          <% if @obj.magic? %><div class='col-md-2'>MAGIC</div><% end %>
          <% if @obj.nodrop? %><div class='col-md-2'>NODROP</div><% end %>
          <% if @obj.anti_good? %><div class='col-md-2'>ANTI-GOOD</div><% end %>
          <% if @obj.anti_evil? %><div class='col-md-2'>ANTI-EVIL</div><% end %>
          <% if @obj.anti_neutral? %><div class='col-md-2'>ANTI-NEUTRAL</div><% end %>
          <% if @obj.noremove? %><div class='col-md-2'>NOREMOVE</div><% end %>
          <% if @obj.inventory? %><div class='col-md-2'>INVENTORY</div><% end %>
          <% if @obj.metallic? %><div class='col-md-2'>METALLIC</div><% end %>
          <% if @obj.good? %><div class='col-md-2'>GOOD</div><% end %>
          <% if @obj.not_purgable? %><div class='col-md-2'>NOT_PURGABLE</div><% end %>
          <% if @obj.flammable? %><div class='col-md-2'>FLAMMABLE</div><% end %>
          <% if @obj.two_handed? %><div class='col-md-2'>TWO HANDED</div><% end %>
          <% if @obj.use_cost? %><div class='col-md-2'>USE COST</div><% end %>
          <% if @obj.anti_unalign? %><div class='col-md-2'>ANTI-UNALIGN</div><% end %>
          <% if @obj.neutral? %><div class='col-md-2'>NEUTRAL</div><% end %>
          <% if @obj.no_hoard? %><div class='col-md-2'>NO HOARD</div><% end %>
          <% if @obj.masked? %><div class='col-md-2'>MASKED</div><% end %>
          <% if @obj.underwater_breath? %><div class="col-md-2">UNDERWATER BREATH</div><% end %>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Wear location:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.wear_location %>
          </div>
        </div>
      </div><br/>

      <div class="row">
        <div class="col-md-2">
          <strong>Weight:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.weight %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Cost:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @obj.cost %>
          </div>
        </div>
      </div><br/>

      <%= render 'objs/appliestable', :obj => @obj %>

      <%= render 'objs/oxdescstable', :obj => @obj %>

    <% if @area.show_formatted_blocks? %>
      <br/>
      <strong class="monospace">Formatted Object:</strong>
      <p>
          <pre><%= render 'objs/objblock', :obj => @obj %></pre>
      </p>
    <% end %>

    </div>
      
    <div class="panel-footer">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  area_objs_path(@area), :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_area_obj_path(@area, @obj), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  area_obj_path(@area, @obj),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  
</div>