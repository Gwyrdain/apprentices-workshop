<div class="panel panel-info">
  <div class="panel-heading"><strong>Applies</strong></div>
    <table class="table table-hover monospace">
      <thead>
        <tr>
          <th>Apply Type</th>
          <th>Amount</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tfoot><tr><td colspan = '100%'>
        <%= link_to 'New Apply', new_area_obj_apply_path(@area, @obj), :class => 'btn btn-primary' %>
      </td></tr></tfoot>
      <tbody>
        <% @obj.applies.each do |apply| %>
          <tr>
            <td>
              <% if apply.apply_type == 1 %>STR<% end %>
              <% if apply.apply_type == 2 %>DEX<% end %>
              <% if apply.apply_type == 3 %>INT<% end %>
              <% if apply.apply_type == 4 %>WIS<% end %>
              <% if apply.apply_type == 5 %>CON<% end %>
              <% if apply.apply_type == 12 %>MANA<% end %>
              <% if apply.apply_type == 13 %>HIT<% end %>
              <% if apply.apply_type == 14 %>MOVE<% end %>
              <% if apply.apply_type == 17 %>AC<% end %>
              <% if apply.apply_type == 18 %>HITROLL<% end %>
              <% if apply.apply_type == 19 %>DAMROLL<% end %>
              <% if apply.apply_type == 24 %>SAVE V SPELL<% end %>
              <% if apply.apply_type == 25 %>CHARISMA<% end %>
              <% if apply.apply_type == 26 %>LUCK<% end %>
              <% if apply.apply_type == 27 %>NOSTEAL<% end %>
              <% if apply.apply_type == 28 %>NOSLEEP<% end %>
              <% if apply.apply_type == 29 %>NOSUMMON<% end %>
              <% if apply.apply_type == 30 %>NOCHARM<% end %>
              <% if apply.apply_type == 31 %>NOSEXCHANGE<% end %>
              <% if apply.apply_type == 32 %>TRUESEE<% end %>
              <% if apply.apply_type == 33 %>NOINFO<% end %>
              <% if apply.apply_type == 34 %>WATERBREATH<% end %>
              <% if apply.apply_type == 41 %>DAMAGE ABSORPTION<% end %>
              <% if apply.apply_type == 43 %>MAGICAL RESISTANCE<% end %>
            </td>
            <td><%= apply.amount %></td>
            <td>
              <%= link_to area_obj_apply_path(@area, @obj, apply), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                <%= glyph 'info-sign' %>
              <%- end -%>
              <%= link_to edit_area_obj_apply_path(@area, @obj, apply), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
                <%= glyph 'pencil' %>
              <%- end -%>
              <%= link_to area_obj_apply_path(@area, @obj, apply), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                <%= glyph 'remove' %>
              <%- end -%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
