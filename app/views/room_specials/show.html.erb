<%- model_class = RoomSpecial -%>

<div class="panel panel-default">
    <div class="panel-heading monospace"><h3>
        <%= link_to @area.name, area_path(@area) %> /
        <%= link_to "Room: #{@room.vnum}", area_room_path(@area, @room) %> /
        <%= @room_special.name %>
    </h3></div>
    <div class="panel-body monospace">
      
      <div class="fieldset">
        <dl>
            <dt class="label label-default"><%= model_class.human_attribute_name(:room_special_type) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.room_special_type %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.name %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_1) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.extended_value_1 %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_2) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.extended_value_2 %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_3) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.extended_value_3 %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_4) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.extended_value_4 %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:extended_value_5) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.extended_value_5 %></pre></dd>
            <dt class="label label-default"><%= model_class.human_attribute_name(:room_id) %></dt>
            <dd><pre class="prettyprint"><%= @room_special.room_id %></pre></dd>
        </dl>
      </div>
      
      <div class="form-group">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    area_room_path(@area, @room), :class => 'btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_area_room_room_special_path(@area, @room, @room_special), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    area_room_room_special_path(@area, @room, @room_special),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      </div>

    </div>
    
</div>
