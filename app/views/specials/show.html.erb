<%- model_class = Special -%>

<div class="panel panel-default monospace">
  <div class="panel-heading"><h3>
      <%= link_to @area.name, area_path(@area) %> /
      <%= link_to "Mobile: #{@mobile.vnum}", area_mobile_path(@area, @mobile) %> /
      <%= @special.name %>
  </h3></div>
  <div class="panel-body">
    
    <div class="row">
      <div class="col-md-2">
        <strong>Type:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <% if @special.special_type == 'M' %>Normal Mobile Special Function<% end %>
          <% if @special.special_type == 'N' %>Extended Mobile Special Function<% end %>
        </div>
      </div>
    </div><br/>
    
    <div class="row">
      <div class="col-md-2">
        <strong>Name:</strong>
      </div>
      <div class="col-md-10">
        <div class="col-md-10">
          <%= @special.name %>
        </div>
      </div>
    </div><br/>
    
    <% if @special.special_type == 'N' %>
    
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @special.extended_value_1 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @special.extended_value_2 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @special.extended_value_3 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @special.extended_value_4 %>
          </div>
        </div>
      </div><br/>
      
      <div class="row">
        <div class="col-md-2">
          <strong>Ext. value 1:</strong>
        </div>
        <div class="col-md-10">
          <div class="col-md-10">
            <%= @special.extended_value_5 %>
          </div>
        </div>
      </div><br/>
    
    <% end %>

  </div>

  <div class="panel-footer">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                area_mobile_path(@area, @mobile), :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_area_mobile_special_path(@area, @mobile, @special), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                area_mobile_special_path(@area, @mobile, @special),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>

</div>
